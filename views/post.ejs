<script>
    function checkPost(){

        var post_test = document.getElementById("post_test").value;
        if(post_test == null ||post_test.search(/[\s]/g)!=-1){
            alert("标题不能为空且不能包含空格!");
        }else if(!ue.getEditor('myEditor').hasContent()){
            alert("内容不能为空!");
        }else{
            return true;
        }

        return false;
    }

</script>
